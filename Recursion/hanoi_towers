#include <iostream>
#include <vector>


using namespace std;

#include <iostream>

using namespace std;

void hanoiMove(int n, string start, string help, string end) {
    if (n > 1) {
        hanoiMove(n - 1, start, end, help);
        cout << "move " << n <<  " from " << start << " to " << help << endl;
        hanoiMove(n - 1, end, help, start);
    }
    else {
        cout << "move " << n << " from " << start << " to " << help << endl;
    }
}

int main()
{
    int n;
    cout << "Enter number of disks: " << endl;
    cin >> n;
    cout << endl;
    string A = "A", B = "B", C = "C";


    hanoiMove(n, A, B, C);
    

    return 0;
}
